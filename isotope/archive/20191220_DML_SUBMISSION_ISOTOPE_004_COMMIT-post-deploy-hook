#!/usr/bin/env bash
# Do not change this script, it is automatically generated by commit-submission.
# This script is called by deploy-staging after deploy of CR $cr_name.

target_uri=$1
submission_id=$2

script_dir=$(realpath "$(dirname "$0")")
script_name=$(basename "$0")

cr_name=${script_name#@}
cr_name=${cr_name%-post-deploy-hook}

g_root_folder=$(realpath $script_dir/..)

g_folder=$g_root_folder/subsystem/deploy/clearinghouse-data/$cr_name

if [ ! -d "$g_folder" ]; then
    submission --mode restore --target-uri $target_uri --id $cr_name --target-id next --folder $g_folder --force
fi