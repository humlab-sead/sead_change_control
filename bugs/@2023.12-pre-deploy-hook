#!/usr/bin/env bash

target=""
script_dir=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

while [[ $# -gt 0 ]]
do
    key="$1"
    case $key in
        --target)
            target="$2"; shift; shift
        ;;
    esac
done


gunzip_submissions() {
    file=$1
    if [ -f "$file" ]; then
        gunzip $file ;
    fi
}

lookup_cr_deployed() {
    cr=$1
    if [ "$target" != "" ]; then
        cr_log=$(sqitch log --target $target -C $script_dir | grep $cr)
    fi
}

gunzip_submissions $script_dir/deploy/20231211_DML_SUBMISSION_BUGS_20231219_COMMIT/sead_staging_202212_vs_sead_staging_bugs_DEPLOY_public_202401031734.sql.gz
gunzip_submissions $script_dir/deploy/20231211_DML_SUBMISSION_BUGS_20231219_COMMIT/sead_staging_202212_vs_sead_staging_bugs_DEPLOY_bugs_import_202401031724.sql.gz
