#!/bin/bash

. $(dirname "$0")/utility.sh

SHELL=/bin/bash

export PGCLIENTENCODING=UTF8

set -e

script_dir=$(cd "$( dirname "${BASH_SOURCE[0]}")" && pwd )
script_name=`basename "$0"`

g_host=
g_user=
g_port=5433
g_database=
g_submission_id=0
g_project=
g_force=0
g_mode=dry_run
g_temp_folder=./tmp
g_issue_id=
g_issue_option=--create-issue
g_cr_name=
g_note=
# g_date=$(date +%Y%m%d)
g_date=
g_dry_run=NO
g_exec_prefix=

if [ -f ~/vault/.default.sead.server ]; then
    g_host=$(head -n 1 ~/vault/.default.sead.server)
fi

if [ -f ~/vault/.default.sead.username ]; then
    g_user=$(head -n 1 ~/vault/.default.sead.username)
fi

function usage() {
    local usage_error="$1"
    if [ "$usage_error" != "" ]; then
        echo "error: $usage_error"
    fi
    echo "usage: $script_name --date YYYYMMDD --mode update|new|only_cr|only_data|list --database DBNAME --id ID --project PROJECT --note NOTE [OPTIONS...] "
    echo "  mandatory option:"
    echo ""
    echo "       --date YYYYMMDD          Submission's date (mandatory if --change is not specified)"
    echo "       --mode MODE              Whether to update existing change request or add a new one to SEAD Control System"
    echo "               list             List all open submissions"
    echo "               new              Generate and add new change request to SEAD Control System."
    echo "               new_or_update    Create new CR or update existing if exists."
    echo "               update           Update deploy script & data in existing change request"
    echo "               only_cr          Generate change request in target folder but do not update or add to SEAD Control System"
    echo "               only_data        Only generate data, do not create a change request"
    echo "               list             Only list available open submissions"
    echo "       --database DBNAME        Target database (mandatory)"
    echo "       --id ID                  Submission's identity (mandatory)"
    echo "       --project PROJECT        Target change control project (mandatory)"

    echo "  non-mandatory option:"
    echo "       --change                 Override default change request name"
    echo "       --note NOTE              Change request (and issue) note"
    echo "       --host HOST              Target database host (default ~/vault/.default.sead.server)"
    echo "       --port PORT              Target database port (default 5432)"
    echo "       --user USERNAME          Target database host (default ~/vault/.default.sead.server)"
    echo "       --force                  Force overwrite of existing target folder if exists"
    echo "       --no-create-issue        Do not create a Github issue for this submission"
    echo "       --only-create-data       Only generate data, do not create a change request"
    echo "       --related-issue-id ID    Link CR to existing Github issue ID related to this submission"
    echo "       --note NOTE              Change request (and issue) note (default 'Deploy of Clearinghouse submission {ID}.')"
    echo "       --temp-folder FOLDER     Override default temporary folder (not recommended)"
    exit 64
}

POSITIONAL=()
while [[ $# -gt 0 ]]
do
    key="$1"

    case $key in
        --date)
            g_date="$2";
            shift 2;
        ;;
        --mode)
            g_mode="$2";
            shift 2;;
        --change)
            g_cr_name="$2";
            shift 2;;
        --host|-h)
            g_host="$2";
            shift 2;
        ;;
        --port)
            g_port="$2";
            shift 2;
        ;;
        --user|-U)
            g_user="$2";
            shift 2;
        ;;
        --database|-d)
            g_database="$2";
            shift 2;
        ;;
        --id|-i|--submission-id)
            g_submission_id="$2";
            shift 2;
        ;;
        --project|-C|--plan-file)
            g_project="$2";
            shift 2;
        ;;
        --temp-folder|--temp|-t)
            g_temp_folder="$2";
            shift 2;
        ;;
        -f|--force)
            g_force="YES";
            shift;
        ;;
        -x|--dry-run)
            g_dry_run="YES";
            g_exec_prefix="echo "
            shift;
        ;;
        --note|-n)
            g_note="$2";
            shift 2;
        ;;
        --related-issue-id)
            g_issue_id="$2";
            g_issue_option="--issue-id $g_issue_id"
            shift 2;
        ;;
        --no-create-issue)
            g_issue_option="";
            shift;
        ;;
        --help|-h)
            usage;
            exit 0;
        ;;
        --*)
            usage  "error: invalid option $1"
            exit 64
        ;;
        *)
            POSITIONAL+=("$1") # save it in an array for later
            shift
        ;;
    esac
done

function check_options() {

    if [ "$g_cr_name" == "" ]; then
        if [ "$g_date" == "" ]; then
            usage "CR name or date must be specified (--date YYYYMMDD)";
        fi
    fi

    local mode_opts=("new" "update" "new_or_update" "list" "only_cr" "only_data")

    if [[ ! " ${mode_opts[@]} " =~ " ${g_mode} " ]]; then
        usage "unknown value for option --mode $g_mode";
    fi

    if [ "$g_host" == "" ] || [ "$g_user" == "" ]; then
        usage "database host and/or user not specified (--user and --host)";
    fi

    if [ "$g_database" == "" ]; then
        usage "database must be specified (--database)";
    fi

    if [ "$g_mode" == "list" ]; then
        return
    fi

    if [ "$g_submission_id" == "0" ]; then
        usage "submission id must be specified (--id)";
    fi

    if [ "$g_mode" == "only_cr" ] || [ "$g_mode" == "only_data" ]; then
        return
    fi

    if [ "$g_project" == "" ]; then
        usage "project must be specified (--project)";
    fi

    if [ ! -f "$g_project/sqitch.plan" ]; then
        usage "project $g_project does not exist or is not a sqitch project";
    fi
}

function print_options()
{
    if [ "$g_dry_run" == "YES" ]; then
        echo "notice: dry run, no changes will be made"
        echo "  g_mode: $g_mode"
        echo "  g_date: $g_date"
        echo "  g_submission_id: $g_submission_id"
        echo "  g_project: $g_project"
        echo "  g_cr_name: $g_cr_name"
        echo "  g_work_folder: $g_work_folder"
        echo "  g_temp_folder: $g_temp_folder"
        echo "  g_database: $g_database"
        echo "  g_host: $g_host"
        echo "  g_user: $g_user"
        echo "  g_port: $g_port"
        echo "  g_force: $g_force"
        echo "  g_dry_run: $g_dry_run"
        echo "  g_note: $g_note"
        echo "  g_issue_id: $g_issue_id"
        echo "  g_issue_option: $g_issue_option"
    fi
}

function dbexec() {
    local opt=$1
    local sql="$2"
    $g_exec_prefix psql -h $g_host -U $g_user -d $g_database -p $g_port --no-password --single-transaction -q -X -1 -v ON_ERROR_STOP=1 $opt "$sql"
    if [ $? -ne 0 ];  then
        echo "fatal: psql command failed, deploy aborted." >&2
        echo "$sql" >&2
        exit 64
    fi
}

function get_datatype() {
    local dt_sql="select min(data_types) from clearing_house.tbl_clearinghouse_submissions where submission_id = $g_submission_id"
    local dt_x=`psql -h $g_host -U $g_user -d $g_database -p $g_port -X -A -t -c "$dt_sql"`
    local dt_x=${dt_x/ /_}
    if [ "$dt_x" == "" ]; then
        usage "submission has an undefined data type."
        exit 64
    fi
    echo "$dt_x"
}

function generate_cr_name() {
    local day=$1
    local zid=`printf "%03d" ${g_submission_id}`
    local dt_y=`get_datatype`
    local cr_x="${day}_DML_SUBMISSION_${dt_y^^}_${zid}_COMMIT"
    echo "${cr_x^^}"
}

function generate_data() {

    local submission_id=$1
    local work_folder=$2

    rm -rf "$work_folder"
    mkdir -p $work_folder

    local sql="
        do \$\$
        begin
            perform clearing_house_commit.resolve_primary_keys(${submission_id}, 'public', FALSE);
        end \$\$ language plpgsql;
";

    echo $sql | psql -h $g_host -U $g_user -d $g_database -p $g_port --no-password -q -X -1 -v ON_ERROR_STOP=1

    dbexec -c "\copy (select * from clearing_house_commit.generate_resolved_submission_copy_script($submission_id, '$work_folder', true)) to STDOUT;" \
        | sed  -e 's/\\n/\n/g' -e 's/\\r/\r/g' -e 's/\\\\/\\/g' >> "$work_folder/copy_out.sql"

    dbexec -f "$work_folder/copy_out.sql"

 }

function generate_deploy() {

    local submission_id=$1
    local cr_name=$2
    local project=$3
    local work_folder=$4
    local cr_author=`getent passwd $USER | cut -d ':' -f 5 | cut -d ',' -f 1`

    echo "Deploy $g_project: $cr_name"
    echo "/***************************************************************************" >> $work_folder/${cr_name}.sql
    echo "  Author         $cr_author"                                                  >> $work_folder/${cr_name}.sql
    echo "  Date           $day"                                                        >> $work_folder/${cr_name}.sql
    echo "  Description    $g_note"                                                     >> $work_folder/${cr_name}.sql
    echo "  Issue                 "                                                     >> $work_folder/${cr_name}.sql
    echo "  Prerequisites  "                                                            >> $work_folder/${cr_name}.sql
    echo "  Reviewer"                                                                   >> $work_folder/${cr_name}.sql
    echo "  Approver"                                                                   >> $work_folder/${cr_name}.sql
    echo "  Idempotent     NO!"                                                         >> $work_folder/${cr_name}.sql
    echo "  Notes          Use --single-transaction on execute!"                        >> $work_folder/${cr_name}.sql
    echo "***************************************************************************/" >> $work_folder/${cr_name}.sql

    #echo "BEGIN TRANSACTION ISOLATION LEVEL SERIALIZABLE;"                             >> $work_folder/${cr_name}.sql
    echo "set client_encoding = 'UTF8';"                                                >> $work_folder/${cr_name}.sql
    echo "set client_min_messages to warning;"                                          >> $work_folder/${cr_name}.sql
    echo "\set autocommit off;"                                                         >> $work_folder/${cr_name}.sql

    echo ""                                                                             >> $work_folder/${cr_name}.sql
    echo "do \$\$"                                                                      >> $work_folder/${cr_name}.sql
    echo "begin"                                                                        >> $work_folder/${cr_name}.sql
    echo "    perform sead_utility.set_fk_is_deferrable('public', true, false);"        >> $work_folder/${cr_name}.sql
    echo "end \$\$ language plpgsql;"                                                   >> $work_folder/${cr_name}.sql
    echo ""                                                                             >> $work_folder/${cr_name}.sql

    echo "begin;"                                                                       >> $work_folder/${cr_name}.sql
    echo "set constraints all deferred;"                                                >> $work_folder/${cr_name}.sql

    # NOTE: relative cd if OS command, /repo assumes running sqitch via Docker
    echo "\cd /repo/$project/deploy"                                                    >> $work_folder/${cr_name}.sql

    dbexec -c "\copy (select * from clearing_house_commit.generate_resolved_submission_copy_script($submission_id, '$cr_name', false)) to STDOUT; " \
        | sed  -e 's/\\n/\n/g' -e 's/\\r/\r/g' -e 's/\\\\/\\/g'                         >> $work_folder/${cr_name}.sql

	echo "select clearing_house_commit.allocate_sequence_ids();"                        >> $work_folder/${cr_name}.sql
	echo "select clearing_house_commit.commit_submission($submission_id);"              >> $work_folder/${cr_name}.sql

	echo "commit;"                                                                      >> $work_folder/${cr_name}.sql

    echo ""                                                                             >> $work_folder/${cr_name}.sql
    echo "do \$\$"                                                                      >> $work_folder/${cr_name}.sql
    echo "begin"                                                                        >> $work_folder/${cr_name}.sql
    echo "    perform sead_utility.set_fk_is_deferrable('public', false, false);"       >> $work_folder/${cr_name}.sql
    echo "end \$\$ language plpgsql;"                                                   >> $work_folder/${cr_name}.sql
    echo ""                                                                             >> $work_folder/${cr_name}.sql

}

function create_change_request()
{
    local submission_id=$1
    local cr_name=$2
    local project=$3
    local work_folder=$4
    local note=$5
    local issue_id=$6

    if [ -f "$project/deploy/$cr_name.sql" ]; then
        echo "fatal: CR task $cr_name already exists, please remove it before adding new."
        exit 64
    fi

    if grep -q "$cr_name" "$project/sqitch.plan"; then
        echo "fatal: CR $cr_name already exists in $project/sqitch.plan, please remove it before adding new."
    fi

    if [ "$note" == "" ]; then
        note="Deploy of Clearinghouse submission {$submission_id}."
    fi

    if [ "$issue_id" != "" ]; then
        note="$note See issue https://github.com/humlab-sead/sead_change_control/issues/$issue_id."
        g_issue_option="--issue-id $issue_id"
    fi

    echo "info: adding CR task $cr_name..."

    if [ ! -f $work_folder/${cr_name}.sql ]; then
        echo "failure: cannot add CR task since $work_folder/$cr_name.sql is missing"
        exit 64
    fi

    local deploy_folder=./${project}/deploy
    local deploy_file=$deploy_folder/${cr_name}.sql

    if [ -f $deploy_file ]; then
        echo "failure: CR task $cr_name.sql already exists (cannot resolve conflict)"
        exit 64
    fi

    $g_exec_prefix ${script_dir}/add-change-request --project ${project} --change $cr_name $g_issue_option --note "$note"

    $g_exec_prefix mv -f $work_folder/${cr_name}.sql $deploy_file
    $g_exec_prefix mv -f $work_folder $deploy_folder/
}


function update_change_request()
{
    local cr_name=$1
    local project=$2
    local work_folder=$3

    echo "info: updating CR task $cr_name..."

    local deploy_folder=./${project}/deploy
    local deploy_file=$deploy_folder/${cr_name}.sql

    if [ ! -f $work_folder/${cr_name}.sql ]; then
        echo "failure: cannot add CR task since $work_folder/$cr_name.sql is missing"
        exit 64
    fi

    if [ ! -f $deploy_file ]; then
        echo "failure: CR task $cr_name.sql does not exist (cannot update)"
        exit 64
    fi

    $g_exec_prefix mv -f $work_folder/${cr_name}.sql $deploy_file
    $g_exec_prefix rm -rf $deploy_folder/${cr_name}
    $g_exec_prefix mkdir -p $deploy_folder/${cr_name}
    $g_exec_prefix mv -f $work_folder/* $deploy_folder/${cr_name}/
}

if [ "$g_mode" == "list" ]; then
    dbexec -c "select submission_id, data_types, upload_date, status_text from \
        clearing_house.tbl_clearinghouse_submissions where submission_state_id = 2;"
    exit 0
fi

check_options

if [ "$g_cr_name" == "" ]; then
    g_cr_name=`generate_cr_name $g_date`
fi

g_work_folder="$g_temp_folder/$g_cr_name"

if [ "$g_mode" != "new_or_update" ]; then
    if  [ -f "$g_project/deploy/$g_cr_name.sql" ]; then
        g_mode="update"
    else
        g_mode="new"
    fi
fi

print_options

generate_data $g_submission_id $g_work_folder

if [ "$g_mode" != "only_data" ]; then

    generate_deploy $g_submission_id $g_cr_name $g_project $g_work_folder

    if [ -f "$project/deploy/$cr_name.sql" ]; then
        echo "fatal: CR task $cr_name already exists, please remove it before adding new."
        exit 64
    fi

    if [ "$g_mode" == "new" ]; then
        create_change_request $g_submission_id $g_cr_name $g_project $g_work_folder $g_note $g_issue_id
    elif [ "$g_mode" == "update" ]; then
        update_change_request $g_cr_name $g_project $g_work_folder
    fi
fi
